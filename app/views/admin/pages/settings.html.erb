<div class="container mx-auto px-4 py-8">
  <div class="w-full max-w-4xl mx-auto">
    <!-- Container para mensagens -->
    <div id="flash-messages" class="mb-4">
      <% if flash[:notice] %>
        <div class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
          <%= flash[:notice] %>
        </div>
      <% end %>
    </div>

    <div class="flex gap-8">
      <!-- Card do Perfil -->
      <div class="w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <div class="flex flex-col items-center pb-10 pt-8">
          <div class="relative group w-full max-w-md">
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar_thumbnail, class: "w-24 h-24 mb-3 mx-auto rounded-full shadow-lg" %>
            <% else %>
              <div class="w-24 h-24 mb-3 mx-auto rounded-full shadow-lg bg-gray-300 flex items-center justify-center">
                <span class="text-2xl text-gray-600"><%= current_user.full_name %></span>
              </div>
            <% end %>

            <div class="mt-4">
              <label for="avatar-upload" class="flex flex-col items-center justify-center w-full p-4 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 dark:hover:bg-gray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500">
                <div class="flex flex-col items-center justify-center">
                  <svg class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"/>
                  </svg>
                  <p class="mb-2 text-sm text-gray-500 dark:text-gray-400"><span class="font-semibold">Clique para fazer upload</span> ou arraste e solte</p>
                  <p class="text-xs text-gray-500 dark:text-gray-400">PNG, JPG ou JPEG (Máx. 5MB)</p>
                </div>
              </label>
            </div>
          </div>

          <%= form_tag admin_update_profile_path, method: :post, multipart: true, class: 'hidden' do %>
            <%= file_field_tag 'user[avatar]', 
                id: 'avatar-upload', 
                class: 'hidden',
                accept: 'image/png,image/jpg,image/jpeg',
                data: { 
                  action: 'change->form#submit'
                } %>
          <% end %>
          
          <h5 class="mb-1 text-xl font-medium text-gray-900 dark:text-white mt-4"><%= current_user.full_name %></h5>
          <span class="text-sm text-gray-500 dark:text-gray-400"><%= current_user.perfil.name %></span>
          
          <div class="flex mt-4 space-x-3">
            <%= link_to "Editar Perfil", "#dados-pessoais", 
                class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300",
                data: { tab: "dados-pessoais" } %>
          </div>
        </div>
      </div>

      <!-- Formulários -->
      <div class="flex-1 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <div class="p-6">
          <div class="tab-content" data-controller="profile-form">
            <div class="tab-pane fade show active" id="dados-pessoais">
              <%= form_tag admin_update_profile_path, method: :post, class: 'space-y-4', data: { profile_form_target: "form" } do %>
                <div class="grid grid-cols-2 gap-4">
                  <div class="relative">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Nome</label>
                    <div data-profile-form-target="display" class="py-2.5 px-2 text-gray-700 dark:text-gray-300">
                      <%= current_user.first_name %>
                    </div>
                    <%= text_field_tag 'user[first_name]', current_user.first_name, 
                        class: 'w-full rounded-lg border border-gray-300 p-2.5 text-sm focus:ring-blue-500 focus:border-blue-500',
                        disabled: true,
                        data: { profile_form_target: "field" } %>
                  </div>

                  <div class="relative">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Sobrenome</label>
                    <div data-profile-form-target="display" class="py-2.5 px-2 text-gray-700 dark:text-gray-300">
                      <%= current_user.last_name %>
                    </div>
                    <%= text_field_tag 'user[last_name]', current_user.last_name, 
                        class: 'w-full rounded-lg border border-gray-300 p-2.5 text-sm focus:ring-blue-500 focus:border-blue-500',
                        disabled: true,
                        data: { profile_form_target: "field" } %>
                  </div>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Nome de Usuário</label>
                  <div data-profile-form-target="display" class="py-2.5 px-2 text-gray-700 dark:text-gray-300">
                    <%= current_user.username %>
                  </div>
                  <%= text_field_tag 'user[username]', current_user.username, 
                      class: 'w-full rounded-lg border border-gray-300 p-2.5 text-sm focus:ring-blue-500 focus:border-blue-500',
                      disabled: true,
                      data: { profile_form_target: "field" } %>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email</label>
                  <div data-profile-form-target="display" class="py-2.5 px-2 text-gray-700 dark:text-gray-300">
                    <%= current_user.email %>
                  </div>
                  <%= email_field_tag 'user[email]', current_user.email, 
                      class: 'w-full rounded-lg border border-gray-300 p-2.5 text-sm focus:ring-blue-500 focus:border-blue-500',
                      disabled: true,
                      data: { profile_form_target: "field" } %>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Telefone</label>
                  <div data-profile-form-target="display" class="py-2.5 px-2 text-gray-700 dark:text-gray-300">
                    <%= current_user.phone %>
                  </div>
                  <%= telephone_field_tag 'user[phone]', current_user.phone, 
                      class: 'w-full rounded-lg border border-gray-300 p-2.5 text-sm focus:ring-blue-500 focus:border-blue-500',
                      disabled: true,
                      data: { profile_form_target: "field" } %>
                </div>

                <div class="flex justify-end space-x-3">
                  <button type="button" 
                          data-profile-form-target="editButton"
                          data-action="click->profile-form#toggleEdit"
                          class="btn btn-primary">
                    Editar Perfil
                  </button>
                  <button type="submit" 
                          class="btn btn-success hidden editing:block">
                    Salvar Alterações
                  </button>
                </div>
              <% end %>
            </div>

            <div class="tab-pane fade" id="senha">
              <%= form_tag admin_update_password_path, method: :post, class: 'space-y-4' do %>
                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Senha Atual</label>
                  <%= password_field_tag 'user[current_password]', nil, 
                      class: 'w-full rounded-lg border border-gray-300 p-2.5 text-sm focus:ring-blue-500 focus:border-blue-500' %>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Nova Senha</label>
                  <%= password_field_tag 'user[password]', nil, 
                      class: 'w-full rounded-lg border border-gray-300 p-2.5 text-sm focus:ring-blue-500 focus:border-blue-500' %>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Confirmar Nova Senha</label>
                  <%= password_field_tag 'user[password_confirmation]', nil, 
                      class: 'w-full rounded-lg border border-gray-300 p-2.5 text-sm focus:ring-blue-500 focus:border-blue-500' %>
                </div>

                <div class="flex justify-end">
                  <button type="submit" class="btn btn-primary">
                    Alterar Senha
                  </button>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>