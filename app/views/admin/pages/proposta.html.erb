<section class="ml-6 p-0 md:p-8 lg:p-12 overflow-auto bg-gray-900 min-h-screen">
  <h2 class="mb-8 text-white text-center font-bold text-2xl">Gerenciamento de Propostas</h2>
  
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-4 sm:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl mx-auto">
      <!-- Card base class para reutilização -->
      <% cards = [
        {
          title: "Consulta de beneficiários",
          description: "Acesse propostas, filtre por status e visualize detalhes completos.",
          icon: '<path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="m21 21-3.5-3.5M17 10a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"/>',
          path: "/admin/propostas/selecionar_consulta"
        },
        {
          title: "Novo Cadastro",
          description: "Configure produtos e preços com condições personalizadas.",
          icon: '<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 9h3m-3 3h3m-3 3h3m-6 1c-.306-.613-.933-1-1.618-1H7.618c-.685 0-1.312.387-1.618 1M4 5h16a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1Zm7 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0Z"/>',
          path: "/admin/propostas/novo"
        },
        {
          title: "Simulador",
          description: "Compare condições e calcule margens em tempo real.",
          icon: '<path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M8 7V6a1 1 0 0 1 1-1h11a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1h-1M3 18v-7a1 1 0 0 1 1-1h11a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1Zm8-3.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z"/>',
          path: "/admin/propostas/simulador"
        },
        {
          title: "Análise e Relatórios",
          description: "Acompanhe métricas e analise tendências de vendas.",
          icon: '<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 4h3a1 1 0 0 1 1 1v15a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V5a1 1 0 0 1 1-1h3m0 3h6m-6 5h6m-6 4h6M10 3v4h4V3h-4Z"/>',
          path: "/admin/propostas/relatorios"
        }
      ] %>

      <% cards.each do |card| %>
        <%= link_to card[:path], class: "block h-full relative group" do %>
          <article class="relative h-full bg-indigo-900 backdrop-blur rounded-xl border-transparent bg-clip-padding origin-border bg-gradient-to-r from-purple-500 to-blue-500
            p-6
            transition-all duration-300 ease-in-out 
            hover:shadow-lg hover:shadow-purple-900 hover:-translate-y-2">
            <div class="flex flex-col items-center justify-between h-full text-center gap-6">
              <div class="p-4 rounded-lg bg-gradient-to-r from-purple-600 to-blue-600 transition-colors duration-300">
                <svg class="w-8 h-8 text-black group-hover:scale-125 transition-transform duration-300" 
                     aria-hidden="true" 
                     xmlns="http://www.w3.org/2000/svg" 
                     fill="none" 
                     viewBox="0 0 24 24">
                  <%= card[:icon].html_safe %>
                </svg>
              </div>
              <h2 class="text-xl font-bold text-black"><%= card[:title] %></h2>
            </div>

            <%# Popup description %>
            <div class="absolute inset-0 flex items-center justify-center opacity-0 invisible group-hover:visible group-hover:opacity-100 transition-all duration-300">
              <div class="absolute inset-0 bg-gradient-to-r from-purple-500/95 to-blue-500/95 backdrop-blur-sm rounded-xl"></div>
              <p class="relative text-sm text-white font-medium px-4 text-center">
                <%= card[:description] %>
              </p>
            </div>
          </article>
        <% end %>
      <% end %>
    </div>
  </div>
</section>