<section class="ml-6 p-1 md:p-8  lg:p-12 overflow-auto bg-gray-900 h-screen
  grid grid-cols-4 sm:grid-cols-3 md:grid-cols-4 xl:grid-cols-6 gap-6 md:gap-4 lg:gap-6
  justify-center items-center">
  <% cards.each do |card| %>
  <article class="relative overflow-hidden bg-indigo-900 backdrop-blur rounded-xl border-transparent bg-clip-padding origin-border bg-gradient-to-r from-purple-500 to-blue-500
    px-3 py-2 md:px-4 md:py-3 w-full h-28 md:h-36
    transition-all duration-300 ease-in-out 
    hover:shadow-lg hover:shadow-purple-900 hover:-translate-y-2 
    group">
    
    <div class="relative z-10 flex flex-col items-center h-full justify-center">
      <div class="p-3 rounded-lg mb-2 md:mb-3 bg-gradient-to-r from-purple-600 to-blue-600 transition-colors duration-300">
      <span class="material-symbols-outlined text-xl md:text-2xl text-black group-hover:scale-125 transition-transform duration-300">
        <%= card[:icon] %>
      </span>
      </div>
      
      <h2 class="text-xs md:text-sm font-semibold text-black mb-1 transition-colors duration-300">
        <%= card[:title] %>
      </h2>
      
      <p class="text-xs text-center transition-colors duration-300">
        <%= card[:description] %>
      </p>
    </div>
  </article>
  <% end %>
</section>
