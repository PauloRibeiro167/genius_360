<div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden flex flex-col">
  <div class="p-4 border-b border-gray-700">
    <div class="flex justify-between items-center">
      <h2 class="text-lg font-semibold text-white">Avisos</h2>
      <button data-bs-toggle="modal" data-bs-target="#novoAvisoModal"
              class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md transition duration-200">
        Novo Aviso
      </button>
    </div>
  </div>
  
  <div class="flex-1 overflow-y-auto p-4 space-y-4">
    <% @avisos&.each do |aviso| %>
      <div class="bg-gray-700 rounded-lg p-4">
        <h3 class="font-semibold text-white"><%= aviso.titulo %></h3>
        <p class="text-gray-300 mt-2"><%= aviso.descricao %></p>
        <div class="mt-2 text-sm text-gray-400">
          Publicado em: <%= aviso.created_at.strftime("%d/%m/%Y") %>
        </div>
      </div>
    <% end %>
  </div>
</div>
