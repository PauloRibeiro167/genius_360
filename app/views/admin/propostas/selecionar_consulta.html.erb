<section class="ml-6 p-0 md:p-8 lg:p-12 overflow-auto bg-gray-900 min-h-screen">
  <div class="max-w-4xl mx-auto space-y-8">
    <%# Cabeçalho %>
    <div class="mb-8">
      <h2 class="text-white text-center font-bold text-2xl">Selecione o Tipo de Consulta</h2>
      <p class="text-gray-400 text-center mt-2">Escolha o tipo de consulta para prosseguir</p>
    </div>

    <%# Pesquisa de Usuário %>
    <%= render 'search_user' %>

    <%# Formulário %>
    <div class="p-8 bg-indigo-900 rounded-xl backdrop-blur border border-purple-500/20 shadow-lg">
      <%= form_tag redirecionar_consulta_admin_propostas_path, method: :post, class: "space-y-6" do %>
        <div class="space-y-4">
          <div class="space-y-2">
            <label class="block text-lg font-medium text-white">
              Tipo de Consulta
            </label>
            <p class="text-sm text-gray-300">
              Selecione o tipo de consulta que deseja realizar
            </p>
          </div>
          
          <%= select_tag :tipo_consulta,
            options_for_select(@tipos_consulta),
            class: "w-full rounded-lg border-2 border-purple-500230 bg-purple-950 text-white 
                   px-4 py-3 text-base
                   focus:border-purple-400 focus:ring-2 focus:ring-purple-400 focus:ring-opacity-50
                   placeholder-gray-400
                   transition-all duration-200" %>
        </div>

        <div class="pt-6 flex justify-end space-x-4">
          <%= link_to admin_propostas_path, 
              class: "px-6 py-3 rounded-lg border-2 border-gray-500 text-gray-300 
                     hover:bg-gray-800 hover:border-gray-400 
                     transition-all duration-200" do %>
            Voltar
          <% end %>

          <%= submit_tag "Prosseguir", 
              class: "px-6 py-3 bg-gradient-to-r from-purple-600 to-blue-600 
                     text-white font-medium rounded-lg 
                     hover:from-purple-700 hover:to-blue-700 
                     focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 
                     transition-all duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</section>