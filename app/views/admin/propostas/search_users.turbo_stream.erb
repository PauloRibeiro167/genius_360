<%= turbo_stream.update "search-results" do %>
  <div class="bg-purple-950/50 rounded-lg divide-y divide-purple-500/20">
    <% @users.each do |user| %>
      <div class="p-4 hover:bg-purple-900/30 transition-colors duration-200">
        <%= link_to selecionar_consulta_admin_propostas_path(user_id: user.id), 
            class: "flex items-center justify-between" do %>
          <div class="flex-1">
            <h3 class="text-white font-medium"><%= user.name %></h3>
            <p class="text-gray-400 text-sm">CPF: <%= user.cpf %></p>
            <p class="text-gray-400 text-sm"><%= user.email %></p>
          </div>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>