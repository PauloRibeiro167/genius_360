<section class="ml-6 p-12 md:p-8 lg:p-12 overflow-auto bg-gray-900 min-h-screen">
  <h2 class="mb-8 text-white text-center font-bold text-2xl">Consulta de Servidores Federais</h2>

  <div class="p-12 max-w-2xl mx-auto bg-indigo-900 rounded-xl p-6 backdrop-blur border-transparent bg-clip-padding">
    <%= form_tag buscar_servidores_federais_admin_propostas_path, method: :post, class: "space-y-6" do %>
      <div class="space-y-2">
        <label class="block text-sm font-medium text-white">CPF do Servidor</label>
        <%= text_field_tag :cpf, nil, class: "mt-1 block w-full rounded-md border-gray-300 bg-white/10 text-white shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Digite o CPF" %>
      </div>

      <div class="flex justify-end">
        <%= submit_tag "Consultar", class: "px-4 py-2 bg-gradient-to-r from-purple-500 to-blue-500 text-white rounded-md hover:from-purple-600 hover:to-blue-600 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 transition-all duration-200" %>
      </div>
    <% end %>
  </div>
</section>