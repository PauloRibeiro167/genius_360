<div class="container mx-auto py-8">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% 6.times do |i| %>
      <div class="bg-purple-900 p-6 rounded-lg shadow-lg">
        <h2 class="text-2xl font-semibold text-white mb-4">Card <%= i + 1 %></h2>
        <p class="text-gray-200 mb-6">
          Descrição do card <%= i + 1 %>. Este é um exemplo de card com uma breve descrição.
        </p>
        <button class="px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 transition-colors duration-300" onclick="showAlert()">
          Ver mais
        </button>
      </div>
    <% end %>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  function showAlert() {
    Swal.fire({
      title: 'Em breve',
      text: 'Esta funcionalidade estará disponível em breve.',
      icon: 'info',
      confirmButtonText: 'OK'
    });
  }
</script>
