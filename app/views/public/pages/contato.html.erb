<div class="bg-white p-12 dark:bg-gray-900">
  <div class="container p-12 px-6  py-12 mx-auto">
    <%# Seção Principal - Formulário e Mapa %>
    <div class="grid grid-cols-2  gap-6 lg:grid-cols-2 gap-8">
      <%# Coluna do Formulário %>
      <div class="w-full" data-controller="alert">
        <div class="w-full p-12 px-8 py-10 overflow-hidden bg-purple-900 rounded-lg shadow-2xl">
          <h1 class="text-2xl text-center font-semibold text-white capitalize mb-6">Entre em Contato</h1>

            <%= render partial: 'contact_messages/form', locals: { contact_message: @contact_message, hide_status: true } %>
        </div>
      </div>

      <%# Coluna do Mapa %>
      <div class="w-full">
        <div class="overflow-hidden rounded-lg h-full min-h-[400px]">
            <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3981.2245100882706!2d-38.48501702502597!3d-3.761247696212636!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x7c74602d5b6f067%3A0xd809a77e8dccbb55!2sAv.%20Washington%20Soares%2C%20855%20-%20704%20-%20Guararapes%2C%20Fortaleza%20-%20CE%2C%2060811-341!5e0!3m2!1spt-BR!2sbr!4v1739928653843!5m2!1spt-BR!2sbr"
            width="100%" 
            height="100%" 
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
      </div>

         <%# Seção de Contatos - 3 colunas %>
    <% contact_cards = [
      {
      icon: 'M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75',
      title: 'Email',
      description: 'Nossa equipe está pronta para ajudar.',
      contact: 'contato@genius360.com.br'
      },
      {
      icon: 'M15 10.5a3 3 0 11-6 0 3 3 0 016 0z M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z',
      title: 'Office',
      description: 'Come say hello at our office HQ.',
      contact: '100 Smith Street Collingwood VIC 3066 AU'
      },
      {
      icon: 'M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z',
      title: 'Phone',
      description: 'Mon-Fri from 8am to 5pm.',
      contact: '+1 (555) 000-0000'
      }
    ] %>

    </div>
    <div class="grid grid-cols-4 md:grid-cols-3 gap-8 mb-12">
      <% contact_cards.each do |card| %>
      <div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-lg">
        <span class="inline-block p-3 text-blue-500 rounded-full bg-blue-100/80 dark:bg-gray-800">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="<%= card[:icon] %>" />
        </svg>
        </span>
        <h2 class="mt-4 text-base font-medium text-gray-800 dark:text-white"><%= card[:title] %></h2>
        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400"><%= card[:description] %></p>
        <p class="mt-2 text-sm text-blue-500 dark:text-blue-400"><%= card[:contact] %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>