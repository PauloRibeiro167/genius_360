<div class="bg-white p-1 dark:bg-gray-900">
  <div class="container p-12 px-6 py-12 mx-auto">
    <%# Seção Principal - Formulário e Mapa %>
    <div class="grid grid-cols-2 gap-6 lg:grid-cols-2">
      <%# Coluna do Formulário %>
      <div class="w-full">
      <div class="w-full p-12 px-8 py-10 overflow-hidden bg-purple-900 rounded-lg shadow-2xl">
      <h1 class="text-2xl text-center font-semibold text-white capitalize mb-6">Entre em Contato</h1>
      
      <div class="sm:mx-auto p-8 sm:w-full">
      <%= form_with(model: @contact_message, local: true, class: "space-y-6") do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
      <%= f.label :name, "Nome", class: "block text-sm font-bold text-gray-100" %>
      <div class="mt-2">
      <%= f.text_field :name, required: true, placeholder: "",
        class: "block w-full appearance-none rounded-md border border-purple-900 px-3 py-2 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm bg-purple-900 backdrop-blur-sm shadow-purple-500/50 text-white" %>
      </div>
      </div>

      <div>
      <%= f.label :email, "Email", class: "block text-sm font-bold text-gray-100" %>
      <div class="mt-2">
      <%= f.email_field :email, required: true, placeholder: "",
        class: "block w-full appearance-none rounded-md border border-purple-900 px-3 py-2 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm bg-purple-900 backdrop-blur-sm shadow-purple-500/50 text-white" %>
      </div>
      </div>

      <div>
      <%= f.label :phone, "Telefone", class: "block text-sm font-bold text-gray-100" %>
      <div class="mt-2">
      <%= f.telephone_field :phone, required: true, placeholder: "",
        class: "block w-full appearance-none rounded-md border border-purple-900 px-3 py-2 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm bg-purple-900 backdrop-blur-sm shadow-purple-500/50 text-white" %>
      </div>
      </div>

      <div>
      <%= f.label :request_type, "Tipo de Solicitação", class: "block text-sm font-bold text-gray-100" %>
      <div class="mt-2">
      <%= f.select :request_type,
        ContactMessage.request_types,
        { include_blank: "" },
        class: "block w-full appearance-none rounded-lg border border-purple-900 px-3 py-2 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm bg-purple-900 backdrop-blur-sm shadow-purple-500/50 text-white" %>
      </div>
      </div>
      </div>

      <div>
      <%= f.label :message, "Mensagem", class: "block text-sm font-bold text-gray-100" %>
      <div class="mt-2">
      <%= f.text_area :message, rows: 4,
        class: "block w-full appearance-none rounded-md border border-purple-900 px-3 py-2 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm bg-purple-900 backdrop-blur-sm shadow-purple-500/50 text-white" %>
      </div>
      </div>

      <div class="text-center mt-6">
      <%= f.submit "Enviar mensagem",
      class: "w-full justify-center rounded-md bg-indigo-600 px-3 py-3 text-base font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
      <% end %>
      </div>
      </div>
      </div>

      <%# Coluna do Mapa %>
      <div class="w-full">
      <div class="overflow-hidden rounded-lg h-full min-h-[400px]">
      <iframe 
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1104.7944721791798!2d-38.483007154766455!3d-3.7610121146723183!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x7c747acdba79311%3A0xff5df110565b2dd7!2sEmpresarial%20Washington%20Soares!5e0!3m2!1spt-BR!2sbr!4v1741305854682!5m2!1spt-BR!2sbr"
      width="100%" 
      height="100%" 
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      sandbox="allow-scripts allow-same-origin allow-popups"
      referrerpolicy="no-referrer-when-downgrade">
      </iframe>
      </div>
      </div>
    </div>

    <%# Seção de Contatos - 3 colunas %>
    <% contact_cards = [
      {
        icon: 'M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75',
        title: 'Email',
        description: 'Nossa equipe está pronta para ajudar.',
        contact: 'contato@genius360.com.br'
      },
      {
        icon: 'M15 10.5a3 3 0 11-6 0 3 3 0 016 0z M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z',
        title: 'Escritório',
        description: 'Venha nos visitar em nosso escritório.',
        contact: 'Av. Washington Soares, 855 - 704 - Edson Queiroz'
      },
      {
        icon: 'M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z',
        title: 'Telefone',
        description: 'Seg-Sex das 8h às 17h.',
        contact: '(85) 3025-2936'
      }
    ] %>

    <div class="grid grid-cols-3 md:grid-cols-3 gap-8 mt-6 mb-12 justify-around">
      <% contact_cards.each do |card| %>
        <div class="bg-purple-900 p-6 rounded-lg shadow-2xl text-center">
          <span class="inline-block p-3 text-white rounded-full bg-purple-800 mx-auto">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="<%= card[:icon] %>" />
            </svg>
          </span>
          <h2 class="mt-4 text-lg font-semibold text-white"><%= card[:title] %></h2>
          <p class="mt-2 text-sm text-gray-300"><%= card[:description] %></p>
          <p class="mt-2 text-sm text-white font-medium"><%= card[:contact] %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
