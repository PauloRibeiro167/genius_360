<main class="container mx-auto px-4 py-6 min-h-screen">
  <div class="bg-gradient-to-br from-indigo-900 via-purple-800 to-pink-700 rounded-3xl overflow-hidden">
    <div class="max-w-7xl mx-auto p-4 md:p-6">  
      <%# Grid responsivo - 1 coluna em dispositivos móveis (padrão) e 2 colunas em dispositivos médios (md) e grandes %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8">
        <%# Primeira coluna - Card principal %>
        <section class="w-full">
          <article class="bg-purple-900 p-6 md:p-8 lg:p-10 rounded-3xl shadow-2xl hover:shadow-pink-500/30 transition-all duration-500 transform hover:rotate-1">
            <header class="mb-4">
              <h1 class="p-2 text-center bg-gradient-to-r from-pink-500 to-purple-500 rounded-2xl text-white text-xl sm:text-2xl md:text-3xl font-bold tracking-wider shadow-lg hover:shadow-purple-500/30 transform hover:scale-105 transition-all duration-500 flex items-center justify-center">
                <svg class="w-6 h-6 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 11l6-5 6 5 5.5-5.5"/>
                </svg>
                Análise Premium
              </h1>
            </header>

            <%# Lista de recursos %>
            <ul class="space-y-3 my-6">
              <% features = [
              { icon: '<svg class="w-5 h-5 md:w-6 md:h-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11V6m0 8h.01M12 3c4.596 0 7.904 4.641 6.336 9.678-.72 2.312-2.035 4.311-3.88 5.641a2.442 2.442 0 0 1-4.912 0c-1.845-1.33-3.16-3.329-3.88-5.641C4.096 7.641 7.404 3 12 3z"/></svg>', text: 'Análise Avançada de Métricas' },
              { icon: '<svg class="w-5 h-5 md:w-6 md:h-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 7.2c0-.663.597-1.2 1.333-1.2h3.334C17.403 6 18 6.537 18 7.2v3.6c0 .663-.597 1.2-1.333 1.2H13.5L12 13.5 10.5 12H7.333C6.597 12 6 11.463 6 10.8V7.2C6 6.537 6.597 6 7.333 6h3.334C11.403 6 12 6.537 12 7.2z"/></svg>', text: 'Insights Personalizados' },
              { icon: '<svg class="w-5 h-5 md:w-6 md:h-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.997.744"/></svg>', text: 'Personalização na Captação' },
              { icon: '<svg class="w-5 h-5 md:w-6 md:h-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.5 11.5 11 14l4-4m6 2a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/></svg>', text: 'Redução de Custo com Prospecção' },
              { icon: '<svg class="w-5 h-5 md:w-6 md:h-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0a6 6 0 1 1-12 0 6 6 0 0 1 12 0Z"/></svg>', text: 'Análise de Dados e Relatórios Detalhados' }
              ] %>
              
              <% features.each do |feature| %>
              <li class="h-10 w-full rounded-xl mb-1 hover:bg-white/30 transition-all duration-300 flex items-center justify-start text-white px-4 sm:px-6 text-sm sm:text-base md:text-lg font-medium tracking-wide transform hover:translate-x-2">
                <span class="mr-2 sm:mr-3">
                <%= feature[:icon].html_safe %>
                </span>
                <span class="line-clamp-1"><%= feature[:text] %></span>
              </li>
              <% end %>
            </ul>
            
            <footer class="flex flex-col sm:flex-row gap-4 justify-center mt-6">
              <button class="p-2 flex-1 h-12 sm:h-14 bg-gradient-to-r from-pink-500 to-purple-500 rounded-full hover:opacity-90 transition-all duration-500 transform hover:scale-105 flex items-center justify-center text-white font-medium text-base sm:text-lg">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 4h1.5L9 16m0 0h8m-8 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm8 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm-8.5-3h9.25L19 7H7.312"/>
                </svg>
                Comprar Agora
              </button>
              <button class="p-2 flex-1 h-12 sm:h-14 bg-white/20 rounded-full hover:bg-white/30 transition-all duration-500 transform hover:scale-105 flex items-center justify-center text-white font-medium text-base sm:text-lg">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 18V6l8 6-8 6Z"/>
                </svg>
                Ver Demo
              </button>
            </footer>
          </article>
        </section>

        <%# Segunda coluna - Cards empilhados %>
        <section class="w-full space-y-6">
          <%# Card de métricas %>
          <article class="bg-purple-900 p-4 sm:p-6 rounded-3xl shadow-2xl hover:shadow-purple-500/30 transition-all duration-500 transform hover:scale-[1.02]">
            <header class="flex flex-wrap items-center justify-center gap-3 mb-4">
              <div class="bg-gradient-to-r from-pink-500 to-purple-500 px-3 py-1.5 sm:px-4 sm:py-2 rounded-xl text-white font-medium text-sm sm:text-base flex items-center">
                <svg class="w-5 h-5 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4.5V19a1 1 0 0 0 1 1h15M7 14l4-4 4 4 5-5m0 0h-3.207M20 9v3.207"/>
                </svg>
                ROI Garantido
              </div>
              <div class="bg-white/20 px-3 py-1.5 sm:px-4 sm:py-2 rounded-xl text-white font-medium text-sm sm:text-base flex items-center">
                <svg class="w-5 h-5 text-white mr-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-width="2" d="M11.083 5.104c.35-.8 1.485-.8 1.834 0l1.752 4.022a1 1 0 0 0 .84.597l4.463.342c.9.069 1.255 1.2.556 1.771l-3.33 2.723a1 1 0 0 0-.337 1.016l1.03 4.119c.214.858-.71 1.552-1.474 1.106l-3.913-2.281a1 1 0 0 0-1.008 0L7.583 20.8c-.764.446-1.688-.248-1.474-1.106l1.03-4.119A1 1 0 0 0 6.8 14.56l-3.33-2.723c-.698-.571-.342-1.702.557-1.771l4.462-.342a1 1 0 0 0 .84-.597l1.753-4.022Z"/>
                </svg>
                4.9/5.0
              </div>
            </header>

            <% metrics = [
              { icon: '<svg class="w-5 h-5 text-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v13m0-13 4 4m-4-4-4 4"/></svg>', 
              text: 'Aumento de Vendas' },
              { icon: '<svg class="w-5 h-5 text-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M5.575 13.729C4.501 15.033 5.43 17 7.12 17h9.762c1.69 0 2.618-1.967 1.544-3.271l-4.881-5.927a2 2 0 0 0-3.088 0l-4.88 5.927Z" clip-rule="evenodd"/></svg>',
              text: 'Otimização de Custos' },
              { icon: '<svg class="w-5 h-5 text-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4.5V19a1 1 0 0 0 1 1h15M7 14l4-4 4 4 5-5m0 0h-3.207M20 9v3.207"/></svg>',
              text: 'Crescimento Sustentável' }
            ] %>

            <ul class="grid grid-cols-1 sm:grid-cols-3 gap-3 my-4 text-white text-sm sm:text-base">
              <% metrics.each do |metric| %>
              <li class="flex items-center bg-white/10 p-2 rounded-lg">
                <span class="mr-2">
                  <%= metric[:icon].html_safe %>
                </span>
                <span class="line-clamp-1"><%= metric[:text] %></span>
              </li>
              <% end %>
            </ul>
          </article>

          <%# Card do gráfico - agora com responsividade adequada %>
          <%= render 'performance_chart' %>
        </section>
      </div>
    </div>
  </div>
</main>
