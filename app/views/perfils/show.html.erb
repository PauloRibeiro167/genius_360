<div class="p-6 bg-purple-900 mt-0 mx-auto rounded-3xl w-96">
  <div class="mb-7">
    <h3 class="font-semibold text-2xl text-center text-gray-100">Detalhes do perfil</h3>
  </div>

  <% if notice.present? %>
    <p class="text-green-500 mb-4"><%= notice %></p>
  <% end %>

  <%= render @perfil %>

  <div class="flex justify-center space-x-4">
    <%= link_to edit_perfil_path(@perfil),
        class: 'flex items-center justify-center bg-yellow-600 hover:bg-yellow-700 text-gray-100 p-3 rounded-lg cursor-pointer transition ease-in duration-500 w-12 h-12' do %>
        <span class="material-icons">edit</span>
    <% end %>
    
    <button data-modal-target="popup-modal-<%= @perfil.id %>" 
            data-modal-toggle="popup-modal-<%= @perfil.id %>"
            type="button"
            class="flex items-center justify-center bg-red-600 hover:bg-red-700 text-gray-100 p-3 rounded-lg cursor-pointer transition ease-in duration-500 w-12 h-12">
      <span class="material-icons">delete</span>
    </button>
  </div>

  <div class="mt-4">
    <%= link_to "Voltar para perfils", 
        perfils_path,
        class: 'w-full flex justify-center bg-purple-800 hover:bg-purple-700 text-gray-100 p-3 rounded-lg tracking-wide font-semibold cursor-pointer transition ease-in duration-500' %>
  </div>
</div>

<div id="popup-modal-<%= @perfil.id %>" 
     tabindex="-1" 
     class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <div class="relative p-4 w-full max-w-md max-h-full">
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
      <!-- Botão de fechar -->
      <button type="button" 
              class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" 
              data-modal-hide="popup-modal-<%= @perfil.id %>">
        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
        </svg>
        <span class="sr-only">Fechar modal</span>
      </button>
      <!-- Conteúdo do modal -->
      <div class="p-4 md:p-5 text-center">
        <svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
        </svg>
        <h3 class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400">Tem certeza que deseja excluir?</h3>
        <%= link_to "Sim, tenho certeza",
            discard_perfil_path(@perfil), 
            class: "text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center me-2",
            data: {
              turbo_method: :patch,
              modal_hide: "popup-modal-#{@perfil.id}"
            } %>
        <button type="button" 
                class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600"
                data-modal-hide="popup-modal-<%= @perfil.id %>">
          Não, cancelar
        </button>
      </div>
    </div>
  </div>
</div>