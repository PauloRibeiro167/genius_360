<% mobile ||= false %>
<% flowbite_style = true unless defined?(flowbite_style) %>

<% menu_items = [
  { text: "Dashboard", path: admin_dashboard_index_path, icon: "fas fa-tachometer-alt" },
  { text: "Perfil", path: edit_user_registration_path, icon: "fas fa-user" },
  { text: "Configurações", path: settings_admin_pages_path, icon: "fas fa-cog" },
  { text: "Sair", path: destroy_user_session_path, 
    icon: "fas fa-sign-out-alt", 

    method: :delete, 
    class_extra: "text-red-300 font-bold" }
] %>

<div class="<%= mobile ? 'mt-1' : 'absolute right-0 top-full mt-1' %> z-10 bg-purple-950 divide-y divide-purple-800 rounded-lg shadow-lg w-44">
  <ul class="py-2 text-sm text-white">
    <% menu_items.each do |item| %>
      <li>
        <%= link_to item[:path], method: item[:method], class: "block px-4 py-2 hover:bg-purple-800 #{item[:class_extra]}" do %>
          <div class="flex items-center">
            <i class="<%= item[:icon] %> w-5 text-center"></i>
            <span class="font-bold ml-1 mr-1"><%= item[:text] %></span>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
