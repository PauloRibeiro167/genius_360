<% mobile ||= false %>
<% flowbite_style = true unless defined?(flowbite_style) %>

<% dropdown_class = mobile ? "space-y-2 py-2" : 
                             "z-10 hidden absolute right-0 mt-2 w-48 bg-white divide-y divide-gray-100 rounded-lg shadow-lg dark:bg-gray-700 dark:divide-gray-600" %>

<% link_class = "block px-4 py-2 #{mobile ? 'text-white hover:bg-purple-700 rounded-md text-lg' : 
                                            'hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white text-base'}" %>

<div class="<%= mobile ? 'mt-2' : 'absolute right-0 top-full mt-2' %> z-10 bg-purple-900 divide-y divide-purple-800 rounded-lg shadow-lg w-48">
  <ul class="py-2 text-sm text-white">
    <li>
      <%= link_to "Dashboard", admin_dashboard_index_path, class: "block px-4 py-2 hover:bg-purple-800" %>
    </li>
    <li>
      <%= link_to "Perfil", edit_user_registration_path, class: "block px-4 py-2 hover:bg-purple-800" %>
    </li>
    <li>
      <%= link_to "Configurações", settings_admin_pages_path, class: "block px-4 py-2 hover:bg-purple-800" %>
    </li>
    <li>
      <%= button_to "Sair", destroy_user_session_path, method: :delete, class: "w-full text-left block px-4 py-2 hover:bg-purple-800 text-red-300" %>
    </li>
  </ul>
</div>
