<% mobile ||= false %>
<% link_class = mobile ? 
   "block py-2 px-3 #{current_page?(path) ? 'text-purple-300' : 'text-white hover:bg-purple-800/70'} rounded" : 
   "block py-2 px-3 #{current_page?(path) ? 'text-purple-300 border-b-2 border-indigo-400' : 'text-white hover:text-pink-400'}" 
%>

<%= link_to text, path, class: link_class %>
