<div class="modal fade" id="novoAvisoModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content bg-gray-800 rounded-lg shadow-lg">
      <div class="modal-header border-b border-gray-700 p-4">
        <h5 class="text-lg font-semibold text-white">Novo Aviso</h5>
        <button type="button" class="text-gray-400 hover:text-gray-200" data-bs-dismiss="modal">
          <span class="sr-only">Fechar</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="modal-body p-4">
        <%= form_with(url: admin_avisos_path, model: @aviso, local: true) do |f| %>
          <div class="space-y-4">
            <div>
              <%= f.label :titulo, class: "block text-sm font-medium text-gray-200" %>
              <%= f.text_field :titulo, class: "mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white focus:ring-blue-500 focus:border-blue-500" %>
            </div>
            <div>
              <%= f.label :descricao, class: "block text-sm font-medium text-gray-200" %>
              <%= f.text_area :descricao, rows: 4, class: "mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white focus:ring-blue-500 focus:border-blue-500" %>
            </div>
            <%= f.submit "Salvar", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-md px-4 py-2 transition duration-200" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
