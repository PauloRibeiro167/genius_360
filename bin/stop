#!/usr/bin/env bash
set -euo pipefail

# Para a aplicação Genius360
echo "=== Genius360: Parando aplicação ==="

# Verificar se docker-compose está instalado
if ! command -v docker-compose &> /dev/null; then
  echo "Docker Compose não encontrado."
  exit 1
fi

# Parar containers
docker-compose stop

echo "=== Aplicação parada ==="
echo "Para iniciar novamente a aplicação, execute: bin/start"
