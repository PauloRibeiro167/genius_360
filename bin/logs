#!/usr/bin/env bash
set -euo pipefail

# Exibe logs da aplicação Genius360
echo "=== Genius360: Exibindo logs (Ctrl+C para sair) ==="

# Verificar se docker-compose está instalado
if ! command -v docker-compose &> /dev/null; then
  echo "Docker Compose não encontrado."
  exit 1
fi

# Parâmetros opcionais para passar ao comando logs
PARAMS=""
if [ "$#" -gt 0 ]; then
  PARAMS="$@"
fi

# Exibir logs
docker-compose logs -f $PARAMS
