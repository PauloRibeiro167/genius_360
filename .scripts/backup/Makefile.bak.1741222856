up:
	@echo "ğŸš€ Iniciando serviÃ§os..."
	@docker-compose up -d
	@echo "âœ¨ ServiÃ§os iniciados"

down:
	@echo "ğŸ›‘ Parando serviÃ§os..."
	@docker-compose down
	@echo "âœ¨ ServiÃ§os parados"

ps:
	@docker-compose ps

fix-server:
	@echo "ğŸ”§ Corrigindo problema de 'server already running'..."
	@docker-compose exec web bash -c "rm -f /app/tmp/pids/server.pid"
	@echo "âœ… Arquivo PID removido"

start:
	@echo "ğŸš€ Iniciando ambiente Genius360 completo..."
	@bash start.sh
	@echo "â³ Abrindo terminal no container web..."
	@docker-compose exec web bash

exec:
	@echo "ğŸš€ Iniciando ambiente Genius360..."
	@docker-compose up -d
	@echo "â³ Aguardando serviÃ§os..."
	@sleep 5
	@docker-compose exec web bash

shell:
	@echo "ğŸš Abrindo terminal no container web..."
	@docker-compose exec web bash

logs:
	@docker-compose logs -f

rails-console:
	@echo "ğŸ›¤ï¸ Abrindo console Rails..."
	@docker-compose exec web rails console

db-console:
	@echo "ğŸ—„ï¸ Abrindo console PostgreSQL..."
	@docker-compose exec postgres psql -U postgres -d genius360_development

db-migrate:
	@echo "ğŸ”„ Executando migraÃ§Ãµes do banco de dados..."
	@docker-compose exec web rails db:migrate

db-reset:
	@echo "âš ï¸ Recriando banco de dados... âš ï¸"
	@docker-compose exec web rails db:drop db:create db:migrate db:seed

server-status:
	@echo "ğŸ” Verificando status do servidor Rails..."
	@if docker-compose exec web bash -c "[ -f /app/tmp/pids/server.pid ]"; then \
		echo "âœ… Servidor Rails estÃ¡ em execuÃ§Ã£o"; \
	else \
		echo "âŒ Servidor Rails nÃ£o estÃ¡ em execuÃ§Ã£o"; \
	fi

server-start:
	@echo "ğŸš€ Iniciando servidor Rails na porta 3001..."
	@make fix-server
	@docker-compose exec web bash -c "cd /app && bundle exec rails s -p 3001 -b '0.0.0.0' -d"
	@echo "âœ… Servidor Rails iniciado na porta 3001"
	@echo "ğŸŒ Acesse: http://localhost:3001"

server-stop:
	@echo "ğŸ›‘ Parando servidor Rails..."
	@docker-compose exec web bash -c "rm -f /app/tmp/pids/server.pid"
	@echo "âœ… Servidor Rails parado"

server-restart:
	@echo "ğŸ”„ Reiniciando servidor Rails..."
	@make server-stop
	@sleep 2
	@make server-start
